{
  "manifest_version": 3,
  "name": "Spark – Creative Assistant for Socials",
  "description": "Generate, rewrite, summarize, and translate social posts with Chrome’s built-in AI (Gemini Nano).",
  "version": "0.2.0",
  "action": { "default_title": "Open Spark", "default_popup": "src/popup.html" },
  "icons": { "128": "assets/icon-128.png" },

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "alarms",
    "notifications"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],

  "offline_enabled": true
}
